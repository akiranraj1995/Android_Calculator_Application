BoxLayout:
    orientation: 'vertical'
    TextInput:
        id: text_input
        font_size: 32
        readonly: True
        halign: 'right'
        multiline: False

    GridLayout:
        cols: 4
        rows: 6  # Increased to accommodate the Backspace button

        Button:
            text: '7'
            on_press: root.on_button_press(self.text)
        Button:
            text: '8'
            on_press: root.on_button_press(self.text)
        Button:
            text: '9'
            on_press: root.on_button_press(self.text)
        Button:
            text: '/'
            on_press: root.on_button_press(self.text)

        Button:
            text: '4'
            on_press: root.on_button_press(self.text)
        Button:
            text: '5'
            on_press: root.on_button_press(self.text)
        Button:
            text: '6'
            on_press: root.on_button_press(self.text)
        Button:
            text: '*'
            on_press: root.on_button_press(self.text)

        Button:
            text: '1'
            on_press: root.on_button_press(self.text)
        Button:
            text: '2'
            on_press: root.on_button_press(self.text)
        Button:
            text: '3'
            on_press: root.on_button_press(self.text)
        Button:
            text: '-'
            on_press: root.on_button_press(self.text)

        Button:
            text: '.'
            on_press: root.on_button_press(self.text)
        Button:
            text: '0'
            on_press: root.on_button_press(self.text)
        Button:
            text: 'C'
            on_press: root.on_button_press(self.text)
        Button:
            text: '+'
            on_press: root.on_button_press(self.text)

        Button:
            text: '<-'  # Backspace button
            on_press: root.on_backspace()

        Button:
            text: '='
            on_press: root.on_solution()

